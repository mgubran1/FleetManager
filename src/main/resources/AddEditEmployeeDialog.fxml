<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<DialogPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.semitruck.AddEditEmployeeDialogController">
    <content>
        <VBox spacing="10" fillWidth="true">
            <GridPane hgap="12" vgap="10">
                <!-- 5x4 grid, grouped by logical sections for maximum readability -->

                <!-- Row 0 -->
                <Label text="Driver ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <TextField fx:id="driverIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="3"/>

                <!-- Row 1 -->
                <Label text="Role:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <ComboBox fx:id="roleField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
                <Label text="Company Name:" GridPane.rowIndex="1" GridPane.columnIndex="2"/>
                <TextField fx:id="companyField" GridPane.rowIndex="1" GridPane.columnIndex="3"/>

                <!-- Row 2 -->
                <Label text="EIN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <TextField fx:id="einField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>
                <Label text="CDL License #:" GridPane.rowIndex="2" GridPane.columnIndex="2"/>
                <TextField fx:id="licenseNumberField" GridPane.rowIndex="2" GridPane.columnIndex="3"/>

                <!-- Row 3 -->
                <Label text="License State:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <TextField fx:id="licenseStateField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                <Label text="CDL Class:" GridPane.rowIndex="3" GridPane.columnIndex="2"/>
                <ComboBox fx:id="cdlClassField" GridPane.rowIndex="3" GridPane.columnIndex="3"/>

                <!-- Row 4 -->
                <Label text="CDL Endorsements:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
                <TextField fx:id="cdlEndorsementsField" GridPane.rowIndex="4" GridPane.columnIndex="1"/>
                <Label text="CDL Restrictions:" GridPane.rowIndex="4" GridPane.columnIndex="2"/>
                <TextField fx:id="cdlRestrictionsField" GridPane.rowIndex="4" GridPane.columnIndex="3"/>

                <!-- Row 5 -->
                <Label text="DOB:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
                <DatePicker fx:id="dobField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
                <Label text="Date of Hire:" GridPane.rowIndex="5" GridPane.columnIndex="2"/>
                <DatePicker fx:id="dateOfHireField" GridPane.rowIndex="5" GridPane.columnIndex="3"/>

                <!-- Row 6 -->
                <Label text="Phone:" GridPane.rowIndex="6" GridPane.columnIndex="0"/>
                <TextField fx:id="phoneField" GridPane.rowIndex="6" GridPane.columnIndex="1"/>
                <Label text="Email:" GridPane.rowIndex="6" GridPane.columnIndex="2"/>
                <TextField fx:id="emailField" GridPane.rowIndex="6" GridPane.columnIndex="3"/>

                <!-- Row 7 -->
                <Label text="Address:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
                <TextField fx:id="addressField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
                <Label text="Medical Card Expiry:" GridPane.rowIndex="7" GridPane.columnIndex="2"/>
                <DatePicker fx:id="medicalCardExpiryField" GridPane.rowIndex="7" GridPane.columnIndex="3"/>

                <!-- Row 8 -->
                <Label text="CDL Expiry:" GridPane.rowIndex="8" GridPane.columnIndex="0"/>
                <DatePicker fx:id="cdlExpiryField" GridPane.rowIndex="8" GridPane.columnIndex="1"/>
                <Label text="Emergency Contact Name:" GridPane.rowIndex="8" GridPane.columnIndex="2"/>
                <TextField fx:id="emergencyContactNameField" GridPane.rowIndex="8" GridPane.columnIndex="3"/>

                <!-- Row 9 -->
                <Label text="Emergency Contact Phone:" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
                <TextField fx:id="emergencyContactPhoneField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
                <Label text="Status:" GridPane.rowIndex="9" GridPane.columnIndex="2"/>
                <ComboBox fx:id="statusField" GridPane.rowIndex="9" GridPane.columnIndex="3"/>

                <!-- Notes Row -->
                <Label text="Notes:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
                <TextArea fx:id="notesField" promptText="Notes" GridPane.rowIndex="10" GridPane.columnIndex="1" GridPane.columnSpan="3" prefRowCount="2"/>
            </GridPane>
        </VBox>
    </content>
    <buttonTypes>
        <ButtonType fx:id="saveButton" text="Save" buttonData="OK_DONE"/>
        <ButtonType fx:id="cancelButton" text="Cancel" buttonData="CANCEL_CLOSE"/>
    </buttonTypes>
</DialogPane>